<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="AnswerAct"
            type="com.kurume_nct.studybattle.viewModel.AnswerViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroud"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="56dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{AnswerAct.problemNameAns}"
                        android:textColor="@color/material_drawer_dark_selected"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView34"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{AnswerAct.masterNameAns}"
                        android:textColor="@color/material_drawer_dark_selected"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/problem_score_ans_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{AnswerAct.problemScoreAns}"
                        android:textColor="@color/material_drawer_dark_selected"
                        android:textSize="18sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/problem_image_at_answer"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/no_image"
                    app:srcCompat="@drawable/text_noimage" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:text="想定解"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="21sp" />

                <ImageView
                    android:id="@+id/answer_image_at_answer"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/no_image"
                    app:srcCompat="@drawable/text_noimage" />


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="全員の解答"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="21sp" />

                <LinearLayout
                    android:id="@+id/answers_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>