<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="CreateView"
            type="com.kurume_nct.studybattle.viewModel.CreateProblemViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/normalback"
        tools:context="com.kurume_nct.studybattle.view.CreateProblemActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="208dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:background="@color/md_cyan_300"
                    android:gravity="center"
                    android:text="問題作成"
                    android:textColor="@color/material_drawer_dark_primary_text"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="問題の題名"
                    android:inputType="textPersonName"
                    android:text="@={CreateView.problemName}"
                    android:textColor="@color/material_drawer_primary_text"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/creator_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:text="@{CreateView.creatorName}" />

                <ImageButton
                    android:id="@+id/problemImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="32dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:onClick="@{CreateView.onClickProblemImage}"
                    android:scaleType="centerCrop"
                    app:loadProblem="@{CreateView.problemUri}"
                    app:srcCompat="@drawable/plus"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/textView3__"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:text="問題の情報"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:text="解答回収日"
                    android:textSize="17sp" />

                <LinearLayout
                    android:id="@+id/directions_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{CreateView.day}"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="0.08"
                        android:background="@drawable/green_button__t"
                        android:onClick="@{CreateView.onClickDateChange}"
                        android:text="変更"
                        android:textColor="#ffffff"
                        android:textSize="18dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:text="1人あたりの時間"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/term_hour_for_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:paddingBottom="32dp"
                    android:text="@{CreateView.termForOne}"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:paddingBottom="5dp"
                    android:text="想定解"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="21sp" />

                <ImageButton
                    android:id="@+id/answerImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:onClick="@{CreateView.onClickAnswerImage}"
                    android:scaleType="centerCrop"
                    app:loadProblem="@{CreateView.answerUri}"
                    app:srcCompat="@drawable/plus" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/red_button_t"
                    android:onClick="@{CreateView.onClickFinish}"
                    android:text="✅問題を作成"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>