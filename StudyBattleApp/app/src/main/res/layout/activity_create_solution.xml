<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.kurume_nct.studybattle.viewModel.CreateSolutionViewModel" />
    </data>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.CreateSolutionActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="81dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginBottom="32dp"
                android:background="@color/md_cyan_500"
                android:gravity="center"
                android:text="解答提出"
                android:textColor="@color/material_drawer_dark_primary_text"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/problem_name_at_camera"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="@{viewModel.problemName}"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="21sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/textView56"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="　残り時間"
                    android:textAlignment="textEnd"
                    android:textColor="@color/material_drawer_accent" />

                <TextView
                    android:id="@+id/remainnig_term_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.90"
                    android:text="@{viewModel.timeRemaining}"
                    android:textAlignment="textStart"
                    android:textColor="@color/material_drawer_accent"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/writer_name_at_camera"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:text="@{viewModel.writer}"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/md_blue_grey_200"
                android:scaleType="centerCrop"
                app:loadImage="@{viewModel.problemUri}"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="　想定解"
                    android:textColor="@color/md_deep_purple_900"
                    android:textSize="21sp" />
            </LinearLayout>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/md_blue_grey_200"
                android:scaleType="centerCrop"
                app:loadImage="@{viewModel.answerUri}"
                android:clickable="@{viewModel.answerImageClickable}"
                android:onClick="@{viewModel.onClickAnswerImage}"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="解答につけるアイテム"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="21sp"
                tools:ignore="HardcodedText" />

            <ImageButton
                android:id="@+id/submit_item_image_button"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/no_image"
                android:foregroundGravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:scaleType="fitXY"
                app:loadImage="@{viewModel.itemImageUri}"
                android:clickable="@{viewModel.itemImageClickable}"
                android:onClick="@{viewModel.onClickItemImage}"
                tools:ignore="ContentDescription,InefficientWeight" />

            <Button
                android:id="@+id/submission_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/red_button_t"
                android:text="提出"
                android:onClick="@{viewModel.onClickSubmit}"
                android:clickable="@{viewModel.itemImageClickable}"
                android:textColor="#ffffff"
                android:textSize="20sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/textView50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="パスをする場合はこちら"
                android:textColor="@color/material_drawer_selected_text"
                android:textSize="15sp" />

            <Button
                android:id="@+id/pass_button"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/blue_button_t"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="パス"
                android:onClick="@{viewModel.onClickPass}"
                android:textColor="#ffffff"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.283"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/submission_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="HardcodedText,MissingConstraints,RtlHardcoded"
                tools:layout_conversion_absoluteHeight="60dp"
                tools:layout_conversion_absoluteWidth="88dp"
                tools:layout_conversion_absoluteX="0dp"
                tools:layout_conversion_absoluteY="80dp" />

        </LinearLayout>

    </ScrollView>
</layout>