<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud"
    tools:context=".view.CameraModeActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="ScrollViewSize">

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="解答提出画面"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/problem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="『掃き出し法』 "
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Space
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_weight="0.04" />

            <TextView
                android:id="@+id/writer_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="by bayo"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/library_button"
                android:layout_width="75dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:drawableTop="@android:drawable/ic_menu_gallery"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/camera_button"
                android:layout_width="88dp"
                android:layout_height="48dp"
                android:layout_weight="0.33"
                android:background="@android:color/transparent"
                android:drawableTop="@android:drawable/ic_menu_camera"
                tools:ignore="ButtonStyle,InefficientWeight" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/no_image"
            android:src="@drawable/text_noimage"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/experiment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="解答につけるアイテム"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="解答の写真を撮影・選択してね"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <ImageButton
            android:id="@+id/item_image"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/no_image"
            android:src="@drawable/hatena"
            tools:ignore="ContentDescription,InefficientWeight" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/submission_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|start"
                android:background="@drawable/red_button"
                android:text="提出"
                android:textColor="#ffffff"
                android:textSize="20sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <Space
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/pass_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|end"
                android:layout_weight="1"
                android:background="@drawable/blue_button"
                android:text="パス"
                android:textColor="#ffffff"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.283"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/submission_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="HardcodedText,MissingConstraints,RtlHardcoded"
                tools:layout_conversion_absoluteHeight="60dp"
                tools:layout_conversion_absoluteWidth="88dp"
                tools:layout_conversion_absoluteX="0dp"
                tools:layout_conversion_absoluteY="80dp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </LinearLayout>


</ScrollView>