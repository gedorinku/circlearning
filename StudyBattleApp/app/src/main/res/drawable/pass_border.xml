<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    //押されてない時
    <item android:state_pressed="false">
        <shape android:shape="rectangle">


            //枠線
            <stroke
                android:width="1dp"
                android:color="#ffffff"
                />

            //丸くする
            <corners
                android:radius="8sp"/>

            //グラーデーション＆角度
            <gradient
                android:angle="90"
                android:endColor="#00a9ff"
                android:startColor="#13e4ff"
                android:type="linear"/>

        </shape>
    </item>

    //押されてるとき
    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            //枠線
            <stroke
                android:width="1dp"
                android:color="#ffffff"
                />

            //丸くする
            <corners android:radius="8sp"/>

            //グラーデーション＆角度
            <gradient
                android:angle="90"
                android:endColor="#00a9ff"
                android:startColor="#13e4ff"
                android:type="linear"/>





        </shape>
    </item>

</layer-list>